                                        <div class="col-md-10">
                                            <input type="text" name="Name" class="form-control" asp-for="Name" placeholder="Nhập title bài viết" required>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-12 col-sm-12">
                                    <div class="form-group">
