@using Business.IRepostitory
@using Model
@inject IRegionRepository RegionRepository
@inject IScholarshipTypeRepository ScholarshipTypeRepository
@model ContactModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/registerInformation/index">List</a></li>
                        <li class="breadcrumb-item active">Edit contact Form</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Edit</h4>
                    </div>
                    <div class="card-body">
                        <form id="formScholarship" action="/RegisterInformation/edit/@Model.Id" method="post" enctype="multipart/form-data" name="mainform">
                            <div class="form-group row">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                @* <input asp-for="Id" hidden />*@
                                <div class="col-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="col-form-label col-md-2">Loại</label>
                                        <div class="col-md-10">
                                            <input type="text"  class="form-control" asp-for="RegisterFor" disabled>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="col-form-label col-md-2">Chi tiết</label>
                                        <div class="col-md-10">
                                            <input type="text"  class="form-control" asp-for="RegisterForName" disabled>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="col-form-label col-md-2">Full Name</label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name" required>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="col-form-label col-md-2">Phone</label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" asp-for="Phone" placeholder="Phone" required>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="col-form-label col-md-2">Email</label>
                                        <div class="col-md-10">
                                            <input type="text"  class="form-control" asp-for="Email" placeholder="Email" required>
                                        </div>

                                    </div>
                                </div>
                             
                                <div class="col-12 col-sm-12">
                                    <div class="form-group">
                                        <label class="col-form-label col-md-2">Message</label>
                                        <div class="col-md-10">
                                            <textarea rows="5" cols="5" class="form-control" placeholder="Enter text here" asp-for="Content" disabled></textarea>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-12 col-sm-12 mb-2">
                                    <label class="col-form-label col-md-2">Reply</label>
                                    <div class="col-md-10 m-b-50">
                                        @await Component.InvokeAsync("TextEditor")
                                        <input asp-for="ReplyContent" id="ReplyContent" hidden />
                                        <div id="editor-container" style="min-height:300px">

                                        </div>
                                    </div>
                                </div>


                            </div>


                            <button class="btn btn-primary mt-5 align-items-end" type="submit">Lưu</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("#editor-container").append('@Html.Raw(Model.ReplyContent)');

    </script>
    <script src="~/admin/assets/js/Application/Contact.js"></script>
}